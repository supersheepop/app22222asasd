layoutbox:




<layoutbox>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                font_name: "assets/font.ttf"
                id: number_label
                font_size: 20
                text: "Phonenumbertrack"
        BoxLayout:
            BoxLayout:
                canvas:
                    Rectangle:
                        source: "assets/button.png"
                        pos: self.pos
                        size: self.size
                Button:
                    on_press: root.phonenumbertr()
                    font_name: "assets/font.ttf"
                    id: number_button
                    background_color: 0,0,0,0
                    font_size: 20
                    text: "trart number track"
                    


        BoxLayout:
            orientation: "vertical"
            Label:
                font_name: "assets/font.ttf"
                size_hint: 1, 0.3
                font_size: 32
                text: "enter the number here \/ "           
            TextInput:
                font_size: 32
                id: text_input
                background_color: 1, 1, 1,1

  


        